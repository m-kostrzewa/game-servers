---
# Promtail Configuration
# Generated by Ansible - Do not edit manually
# Server: {{ inventory_hostname }}

server:
  http_listen_port: 0
  grpc_listen_port: 0

positions:
  filename: {{ promtail_positions_path }}

client:
  url: {{ vault_promtail_url }}

scrape_configs:
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          origin: {{ inventory_hostname }}
          __path__: {{ system_log_path }}

  - job_name: nebulous
    static_configs:
      - targets:
          - localhost
        labels:
          job: nebulous
          origin: {{ inventory_hostname }}
          __path__: {{ game_log_path }}

  - job_name: adminLog
    static_configs:
      - targets:
          - localhost
        labels:
          job: adminLog
          origin: {{ inventory_hostname }}
          __path__: {{ admin_log_path }}
